%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto{"data-hook" => ""}
      %li.nav-item.active{"data-hook" => "", :id => "home-link nav-item"}= link_to Spree.t(:home), spree.root_path
      %li.nav-item{"data-hook" => "", :id => "link-to-cart nav-item"}
        %noscript
          = link_to_cart
        \&#160;
      :javascript
        Spree.fetch_cart()
      - if spree_current_user
        %li.nav-item= link_to Spree.t(:my_account), spree.account_path
        %li.nav-item= link_to Spree.t(:logout), spree.logout_path
      - else
        %li#link-to-login.nav-item= link_to Spree.t(:login), spree.login_path
      %li.nav-item
        %a.nav-link.disabled{:href => "#"} Disabled
    = render partial: 'spree/shared/search'
